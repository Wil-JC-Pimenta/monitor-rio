# Configurações Docker para Monitor Rio Piracicaba

# Aplicação
APP_NAME="Monitor Rio Piracicaba"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000

# Localização
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Banco de Dados
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Cache e Sessões
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=info

# ANA API (opcional - sistema funciona com dados mock)
ANA_API_BASE_URL=https://www.ana.gov.br/hidrowebservice
ANA_API_IDENTIFICADOR=
ANA_API_SENHA=
ANA_API_TIMEOUT=30
ANA_API_RETRY_ATTEMPTS=3
ANA_CACHE_ENABLED=true
ANA_CACHE_TTL=3600

# Email (opcional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@monitor-rio.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (opcional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
