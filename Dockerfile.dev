# Dockerfile para desenvolvimento com hot reload
FROM php:8.1-fpm-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    nginx \
    sqlite \
    sqlite-dev \
    supervisor \
    curl \
    zip \
    unzip \
    git \
    nodejs \
    npm

# Instalar extensões PHP necessárias
RUN docker-php-ext-install \
    pdo \
    pdo_sqlite \
    sqlite3

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Definir diretório de trabalho
WORKDIR /var/www/html

# Copiar arquivos de configuração para desenvolvimento
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY docker/nginx.conf /etc/nginx/nginx.conf
COPY docker/php-fpm.dev.conf /usr/local/etc/php-fpm.d/www.conf

# Copiar arquivos da aplicação
COPY . .

# Instalar dependências PHP (incluindo dev)
RUN composer install

# Instalar dependências Node.js
RUN npm install

# Configurar permissões
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html/storage \
    && chmod -R 755 /var/www/html/bootstrap/cache

# Criar banco SQLite se não existir
RUN touch database/database.sqlite

# Configurar arquivo .env para desenvolvimento
RUN cp .env.example .env \
    && php artisan key:generate --force

# Executar migrações
RUN php artisan migrate --force

# Expor portas
EXPOSE 80 3000

# Comando de inicialização com hot reload
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
